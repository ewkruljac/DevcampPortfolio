<header class="blog-header py-3">
  <div class="row flex-nowrap justify-content-between align-items-center">
    <div class="col-4 pt-1">
      <div class="pos-f-t">
        <div class="collapse" id="navbarToggleExternalContent">
          <div class="bg-light p-4">
            <ul class="list-unstyled">
              <li><%= link_to "Home", root_path, class: "p-2 text-blue" %></li>
              <li><%= link_to "About Me", about_me_path, class: "p-2 text-blue" %></li>
              <li><%= link_to "Contact", contact_path, class: "p-2 text-blue" %></li>
              <li><%= link_to "Portfolio", portfolios_path, class: "p-2 text-blue" %></li>
            </ul>
          </div>
        </div>
        <nav class="navbar navbar-dark bg-light">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        </nav>
      </div>
    </div>
    <div class="col-4 text-center">
      <a class="blog-header-logo text-dark" href="#">Edward's Blog</a>
    </div>
    <div class="col-4 d-flex justify-content-end align-items-center">
      <%= link_to 'Login', new_user_session_path, class: "btn btn-sm btn-outline-primary" %>
      <%= link_to 'Register', new_user_registration_path, class: "btn btn-sm btn-outline-primary" %>
    </div>
  </div>
</header>